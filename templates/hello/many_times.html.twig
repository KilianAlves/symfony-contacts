{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hello many times {{ name |capitalize}}!</h1>
    {% set couleur = ['red', 'green'] %}
    {% for i in 1..times %}
        <p style="color: {{cycle(couleur, i)}}">Hello {{ name |capitalize}}! ({{ i |format_number({integer_digit:2})}})</p>
    {% endfor %}
{% endblock %}

{% block title %}
Hello many times
{% endblock %}

